{
  "name": "E2B RFC/OWASP Auditor",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:20",
  "workspaceFolder": "/workspaces/rfc-refactor",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "typescript.tsdk": "node_modules/typescript/lib"
      }
    }
  },
  "forwardPorts": [3000, 7687, 7444, 8001],
  "portsAttributes": {
    "3000": {
      "label": "Next.js App",
      "onAutoForward": "openPreview"
    },
    "7687": {
      "label": "Memgraph Bolt"
    },
    "7444": {
      "label": "Memgraph Lab"
    },
    "8001": {
      "label": "Memgraph MCP"
    }
  },
  "postCreateCommand": "corepack enable pnpm && pnpm install",
  "postStartCommand": "docker compose -f docker/docker-compose.yml up -d memgraph memgraph-mcp && cd apps/web && pnpm dev -- --hostname 0.0.0.0 --port 3000",
  "remoteEnv": {
    "NODE_ENV": "development",
    "E2B_API_KEY": "${localEnv:E2B_API_KEY}",
    "GROQ_API_KEY": "${localEnv:GROQ_API_KEY}",
    "PERPLEXITY_API_KEY": "${localEnv:PERPLEXITY_API_KEY}"
  }
}
